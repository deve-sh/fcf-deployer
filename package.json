{
	"name": "fcf-deployer",
	"version": "0.0.8",
	"description": "A GUI to help you deploy your Firebase Cloud Functions when working locally",
	"scripts": {
		"dev:client": "cd ./client && npm run dev",
		"dev:server": "tsup --watch --onSuccess \"node dist/server.js\"",
		"compile:server": "tsup",
		"compile:client": "cd ./client && npm run build",
		"build": "npm run compile:server && npm run compile:client && node scripts/ready-server",
		"pre-publish": "npm run compile:server && node scripts/pre-publish",
		"publish-as-package": "npm run build && npm run pre-publish && cd ./dist && npm publish"
	},
	"author": "Devesh Kumar",
	"keywords": [
		"Firebase",
		"Cloud Functions",
		"Deployer",
		"GUI"
	],
	"license": "MIT",
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"get-port-please": "^3.1.1",
		"minimist": "^1.2.8",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.17",
		"@types/minimist": "^1.2.2",
		"tsup": "^7.2.0"
	},
	"bin": {
		"open-functions-deployer": "./server.js"
	}
}
